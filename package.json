{
  "name": "@soulmachines/web-components",
  "private": true,
  "version": "1.5.0",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build && npm run build-snippet",
    "build:cypress": "npm run build && npm run copy-cypress-pages",
    "build-snippet": "node ./scripts/build-snippet.js && uglifyjs dist/widget-snippet.js --output dist/widget-snippet.min.js  --compress --mangle --toplevel ",
    "copy-cypress-pages": "copyfiles -f ./examples/snippet/* ./dist",
    "serve-snippet": "sirv dist -p 5050",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint src/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest --watch",
    "test:ci": "jest",
    "generate": "plop --plopfile generators/index.js",
    "cypress:open": "cypress open",
    "test:cypress:chrome": "cypress run --headless --browser chrome",
    "test:cypress:edge": "cypress run --headless --browser edge",
    "prepare": "husky install"
  },
  "dependencies": {
    "@soulmachines/smwebsdk": "14.4.0",
    "can-autoplay": "^3.0.2",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "preact": "^10.8.1",
    "preactement": "^1.8.2",
    "react-cool-dimensions": "^2.0.7",
    "react-spring": "^9.4.5"
  },
  "devDependencies": {
    "@mdx-js/preact": "^2.1.2",
    "@peculiar/webcrypto": "^1.4.0",
    "@preact/preset-vite": "^2.1.5",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/builder-vite": "^0.1.38",
    "@storybook/preact": "^6.5.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/preact": "^3.2.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@thedutchcoder/postcss-rem-to-px": "0.0.2",
    "@types/can-autoplay": "^3.0.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "autoprefixer": "^10.4.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.12",
    "cypress": "^10.1.0",
    "cypress-log-to-output": "^1.1.2",
    "eslint": "^8.18.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "shelljs": "^0.8.5",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.1.3",
    "ts-jest": "^27.1.4",
    "typescript": "^4.7.4",
    "uglify-js": "^3.16.1",
    "vite": "^2.9.13",
    "vite-plugin-html": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint ./src --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "release": {
    "branches": [
      "master"
    ],
    "tagFormat": "${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "writerOpts": {
            "commitsSort": [
              "scope",
              "subject"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Change Log"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}"
        }
      ]
    ]
  }
}
