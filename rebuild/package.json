{
  "name": "@soulmachines/web-components",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build && npm run build-snippet",
    "build-snippet": "node ./scripts/build-snippet.js && uglifyjs dist/widget-snippet.js --output dist/widget-snippet.min.js  --compress --mangle --toplevel ",
    "preview": "copyfiles -f ./examples/snippet/* ./dist && vite preview",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint src/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest --watch",
    "test:ci": "jest",
    "generate": "plop --plopfile generators/index.js",
    "cypress:open": "cypress open",
    "test:cypress:chrome": "cypress run --headless --browser chrome",
    "test:cypress:edge": "cypress run --headless --browser edge",
    "test:cypress:firefox": "cypress run --headless --browser firefox",
    "cypress:ci:chrome": "start-server-and-test preview http://localhost:5050 test:cypress:chrome",
    "cypress:ci:edge": "start-server-and-test preview http://localhost:5050 test:cypress:edge",
    "cypress:ci:firefox": "start-server-and-test preview http://localhost:5050 test:cypress:firefox"
  },
  "dependencies": {
    "@soulmachines/smwebsdk": "^14.2.0",
    "classnames": "^2.3.1",
    "cypress": "^9.7.0",
    "lodash": "^4.17.21",
    "preact": "^10.7.2",
    "preactement": "^1.8.2",
    "react-cool-dimensions": "^2.0.7",
    "react-spring": "^9.4.5"
  },
  "devDependencies": {
    "@mdx-js/preact": "^2.1.1",
    "@peculiar/webcrypto": "^1.3.3",
    "@preact/preset-vite": "^2.1.5",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/builder-vite": "^0.1.33",
    "@storybook/preact": "^6.4.22",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "autoprefixer": "^10.4.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.7",
    "cypress-browser-permissions": "^1.1.0",
    "eslint": "^8.12.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^27.5.1",
    "plop": "^3.0.5",
    "postcss": "^8.4.13",
    "prettier": "^2.6.1",
    "shelljs": "^0.8.5",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "uglify-js": "^3.15.5",
    "vite": "^2.9.9",
    "vite-plugin-html": "^3.2.0"
  }
}
